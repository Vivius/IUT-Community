<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView"
    android:layout_height="fill_parent" android:layout_width="fill_parent" android:fillViewport="true" android:scrollbars="vertical">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
        android:background="@drawable/backgrd">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_logo2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtLogin"
            android:layout_marginTop="46dp"
            android:minWidth="250dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:hint="Utilisateur"
            android:elegantTextHeight="false"
            android:gravity="center_horizontal"
            android:background="@null"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColorHint="@android:color/white"
            android:textColor="#ffffffff" />

        <View
            android:id="@+id/UnderLine"
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_below="@+id/txtLogin"
            android:layout_alignLeft="@+id/txtLogin"
            android:layout_alignStart="@+id/txtLogin" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPassword"
            android:minWidth="250dp"
            android:layout_below="@+id/txtLogin"
            android:layout_alignLeft="@+id/txtLogin"
            android:layout_alignStart="@+id/txtLogin"
            android:layout_marginTop="66dp"
            android:hint="Mot de passe"
            android:password="true"
            android:gravity="center_horizontal"
            android:background="@null"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColorHint="@android:color/white"
            android:textColor="#ffffffff"
            android:singleLine="true" />

        <View
            android:id="@+id/UnderLine2"
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_below="@+id/txtPassword"
            android:layout_alignLeft="@+id/txtPassword"
            android:layout_alignStart="@+id/txtPassword" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Se connecter"
            android:id="@+id/btnConnexion"
            android:layout_below="@+id/UnderLine2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp" />

    </RelativeLayout>

</ScrollView>
